{
    "name": "Seeker",
    "version": "0.5",
    "description": "Search tool for your bookmarks",
    "permissions":["storage","declarativeContent","bookmarks"],
    "background": {
        "scripts" : ["background.js"],
        "persistent": false
    },
    "page_action":{
        "default_popup":"popup.html",
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "128": "images/128.png"
          }
    },
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "128": "images/128.png"
      },
    "manifest_version": 2
  }